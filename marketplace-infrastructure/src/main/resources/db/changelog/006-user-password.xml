<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="006-add-user-password" author="assistant">
        <addColumn tableName="users">
            <column name="password" type="varchar(255)" defaultValue="{noop}change-me">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="006-fill-seed-passwords" author="assistant">
        <update tableName="users">
            <column name="password" value="{noop}seller123"/>
            <where>id = 'seller-seed-1'</where>
        </update>
        <update tableName="users">
            <column name="password" value="{noop}seller2123"/>
            <where>id = 'seller-seed-2'</where>
        </update>
        <update tableName="users">
            <column name="password" value="{noop}buyer123"/>
            <where>id = 'buyer-seed-1'</where>
        </update>
        <update tableName="users">
            <column name="password" value="{noop}controller123"/>
            <where>id = 'controller-seed-1'</where>
        </update>
    </changeSet>

    <changeSet id="006-add-admin-user" author="assistant">
        <insert tableName="users">
            <column name="id" value="admin-seed-1"/>
            <column name="username" value="admin"/>
            <column name="role" value="ADMIN,CONTROLLER,SELLER,BUYER"/>
            <column name="email" value="admin@marketplace.local"/>
            <column name="password" value="{noop}admin123"/>
        </insert>
    </changeSet>

    <changeSet id="006-password-not-null" author="assistant">
        <addNotNullConstraint tableName="users" columnName="password" columnDataType="varchar(255)"/>
    </changeSet>

</databaseChangeLog>
