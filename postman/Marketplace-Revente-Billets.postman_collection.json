      "item": [
        {
          "name": "1. Create listing (SELLER)",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "{{sellerUsername}}",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "{{sellerPassword}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"sellerId\": \"{{sellerId}}\",\n  \"price\": 89.00,\n  \"currency\": \"EUR\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "listings"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('201 Created', function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.test('listing id present', function () { pm.expect(json.id).to.be.ok; });",
                  "pm.collectionVariables.set('listingId', json.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "2. Certify listing (CONTROLLER)",
